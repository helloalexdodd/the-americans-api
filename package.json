{
  "name": "the-americans-api",
  "version": "1.0.0",
  "description": "REST API for The Americans",
  "main": "src/server.js",
  "scripts": {
    "dev": "node src/server.js",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "test-watch": "NODE_ENV=test jest --watchAll --verbose --runInBand",
    "cover": "NODE_ENV=test jest --verbose --runInBand --coverage",
    "start": "node src/server.js",
    "lint": "eslint . --ext .js",
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true"
  },
  "_moduleAliases": {
    "src": "./src",
    "controllers": "./src/lib/controllers",
    "models": "./src/lib/models",
    "middleware": "./src/lib/middleware",
    "routes": "./src/lib/routes",
    "services": "./src/lib/services",
    "logger": "./logger"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helloalexdodd/the-americans-api"
  },
  "keywords": [
    "REST",
    "API",
    "Americans",
    "tv"
  ],
  "author": "Alex Dodd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/helloalexdodd/the-americans-api/issues"
  },
  "homepage": "https://github.com/helloalexdodd/the-americans-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "config": "^3.3.1",
    "csvtojson": "^2.0.10",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.2.0",
    "joi-objectid": "^3.0.1",
    "jsdom": "^16.3.0",
    "mongoose": "^5.9.27",
    "node-fetch": "^2.6.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-mongodb-js": "^5.0.3",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
